function calculaSaldo(receitas, despesas) {
    let somaA = 0;
    let somaB = 0;
    let somaFinal = 0;

    for (let a = 0; a < receitas.length; a++) {
        somaA = somaA + receitas[a];
    }

    for (let a = 0; a < despesas.length; a++) {
        somaB = somaB + despesas[a];
    }
    somaFinal = somaNumeros(somaA, somaB);

    return somaFinal;
}
function somaNumeros(a, b) {
    let saldo = 0;
    saldo = a - b;
    return saldo;
}
